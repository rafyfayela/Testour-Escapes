style.
  body,
  table {
    font-family: 'Helvetica Neue', Arial, sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: #333;
    margin: 0;
    padding: 0;
  }

  body {
    background-color: #f0f8ff;
    -webkit-font-smoothing: antialiased;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
  }

  img {
    border: none;
    max-width: 100%;
    display: block;
    height: auto;
  }

  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    width: 100%;
  }

  .content {
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    box-sizing: border-box;
    padding: 20px;
  }

  .footer {
    text-align: center;
    color: #888;
    font-size: 14px;
    margin-top: 20px;
  }

  h1,
  h2,
  h3,
  h4 {
    color: #333;
    font-weight: 400;
    margin: 0 0 20px;
  }

  h1 {
    font-size: 36px;
    font-weight: 300;
    text-align: center;
    text-transform: capitalize;
    color: #3498db;
  }

  p,
  ul,
  ol {
    margin: 0 0 15px;
  }

  a {
    color: #3498db;
    text-decoration: none;
  }

  .btn {
    width: 100%;
    text-align: center;
    margin: 20px 0;
  }

  .btn a {
    background-color: #3498db;
    border: 1px solid #3498db;
    border-radius: 5px;
    color: #fff;
    display: inline-block;
    font-size: 16px;
    font-weight: bold;
    padding: 12px 25px;
    text-decoration: none;
    text-transform: capitalize;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .btn a:hover {
    background-color: #2980b9;
    border-color: #2980b9;
  }

  .btn-secondary a {
    background-color: #e74c3c;
    border-color: #e74c3c;
  }

  .btn-secondary a:hover {
    background-color: #c0392b;
    border-color: #c0392b;
  }

  @media only screen and (max-width: 620px) {
    body,
    table,
    p,
    h1 {
      font-size: 18px !important;
    }

    .container {
      padding: 0;
      width: 100% !important;
    }

    .content {
      padding: 10px;
    }

    .btn a {
      width: 100%;
    }
  }
